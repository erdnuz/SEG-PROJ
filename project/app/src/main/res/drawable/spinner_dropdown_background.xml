<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape>
            <!-- Highlight color when pressed -->
            <solid android:color="@color/light_gray" /> <!-- Use light gray for pressed state -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/surface" /> <!-- Use white for normal state -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
